var str = "foo";
print substr(str, 0, 1);           // expect: f
print substr(str, 0, strlen(str)); // expect: foo
print substr(str, 1, 2);           // expect: o

var result = substr("test", 1, 10);

if (result is Error) {
    print "Problem: " + result; // expect: Problem: String index out of bounds for 'test': begin 1, end 10.
} else {
    print result;
}
